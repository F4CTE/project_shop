{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Visible</th>
                <th>Discount</th>
                <th>TaxFreePrice</th>
                <th>Description</th>
                <th>DateCreated</th>
                <th>author</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.visible ? 'Yes' : 'No' }}</td>
                <td>{{ product.discount ? 'Yes' : 'No' }}</td>
                <td>{{ product.taxFreePrice }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.dateCreated ? product.dateCreated|date('Y-m-d') : '' }}</td>
                <td>{{ product.user.userIdentifier }}</td>
                <td>
                    <a href="{{ path('app_product_crud_maker_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_product_crud_maker_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_crud_maker_new') }}">Create new</a>
{% endblock %}
