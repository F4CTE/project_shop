{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ product.visible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ product.discount ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>TaxFreePrice</th>
                <td>{{ product.taxFreePrice }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>DateCreated</th>
                <td>{{ product.dateCreated ? product.dateCreated|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_crud_maker_index') }}">back to list</a>

    <a href="{{ path('app_product_crud_maker_edit', {'id': product.id}) }}">edit</a>

    {{ include('product_crud_maker/_delete_form.html.twig') }}
{% endblock %}
